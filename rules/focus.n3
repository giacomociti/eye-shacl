@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix log: <http://www.w3.org/2000/10/swap/log#> .
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix this: <http://eye-shacl#> .

{
    ?shape a sh:Shape .
    [] this:shapesGraph [ log:includes { ?shape sh:targetClass ?targetClass } ] .
    [] this:dataGraph [ log:includes { ?focusNode a ?targetClass } ] # todo subclasses
}
=>
{
    ?shape this:focusNode ?focusNode
} .

{
    ?shape a sh:Shape .
    [] this:shapesGraph [ log:includes { ?shape a rdfs:Class } ] .
    [] this:dataGraph [ log:includes { ?focusNode a ?shape } ] # todo subclasses
}
=>
{
    ?shape this:focusNode ?focusNode
} .

{
    ?shape a sh:Shape .
    [] this:shapesGraph [ log:includes { ?shape sh:targetNode ?targetNode } ] .
}
=>
{
    { [] this:dataGraph [ log:includes { ?targetNode [] [] } ] } => { ?shape this:focusNode ?targetNode } .
    { [] this:dataGraph [ log:includes { [] [] ?targetNode } ] } => { ?shape this:focusNode ?targetNode } .
    { [] this:dataGraph [ log:includes { [] ?targetNode [] } ] } => { ?shape this:focusNode ?targetNode } .
} .


{
    ?shape a sh:Shape .
    [] this:shapesGraph [ log:includes { ?shape sh:targetObjectsOf ?predicate } ] .
    [] this:dataGraph [ log:includes { [] ?predicate ?focusNode } ]
}
=>
{
    ?shape this:focusNode ?focusNode
} .

{
    ?shape a sh:Shape .
    [] this:shapesGraph [ log:includes { ?shape sh:targetSubjectsOf ?predicate } ] .
    [] this:dataGraph [ log:includes { ?focusNode ?predicate [] } ]
}
=>
{
    ?shape this:focusNode ?focusNode
} .
